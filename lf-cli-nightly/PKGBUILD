# Maintainer: Christian Menard <christian.menard@tu-dresden.de>

pkgname=lf-cli-nightly
pkgver=20230820050226
pkgrel=1
pkgdesc="The Lingua Franca compiler and command line tools"
arch=('x86_64')
url="https://lf-lang.org"
license=('BSD')
depends=('java-runtime=17' 'bash')
replaces=('lfc-bin')
conflicts=('lfc-bin' 'lf-cli-bin' 'lf-cli-nightly-bin')
source=('https://github.com/lf-lang/lingua-franca/archive/refs/tags/nightly.tar.gz')
sha512sums=('f2bd8ae0c41d69c8bfcc545992d779a4e1c09fee71f55eb5cdd258c49673a7d5e8a8795354d4ba916b17fa820b78b4ec7fac10ced4d1941cac07ee1989ee5641')

package() {
    cd "${srcdir}/lingua-franca-nightly"

    mkdir -p "${srcdir}"/gradle
    export GRADLE_USER_HOME=${srcdir}/gradle

    ./gradlew --no-daemon assemble

    for f in "build/install/lf-cli/lib"/*.jar; do
        install -Dm644 "${f}" "${pkgdir}/usr/share/java/${pkgname}/lib/$(basename "$f")"
    done
    install -Dm755 "build/install/lf-cli/bin/lfc" "${pkgdir}/usr/share/java/${pkgname}/bin/lfc"
    install -Dm755 "build/install/lf-cli/bin/lfd" "${pkgdir}/usr/share/java/${pkgname}/bin/lfd"
    install -Dm755 "build/install/lf-cli/bin/lff" "${pkgdir}/usr/share/java/${pkgname}/bin/lff"
    mkdir -p "${pkgdir}/usr/bin"
    cd "${pkgdir}/usr/bin"
    ln -s "../share/java/${pkgname}/bin/lfc" lfc
    ln -s "../share/java/${pkgname}/bin/lfd" lfd
    ln -s "../share/java/${pkgname}/bin/lff" lff
}
